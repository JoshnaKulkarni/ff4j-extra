<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

 	<!-- Display Name in application server -->
	<display-name>FF4J Administration Console</display-name>

	<!-- Externalisation des constantes -->
	<context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>application-resources</param-value>
    </context-param>
    
    <!-- SpringBeans -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- Administrate features -->
	<servlet>
		<servlet-name>admin-console</servlet-name>
		<servlet-class>org.ff4j.web.AdministrationConsoleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin-console</servlet-name>
		<url-pattern>/admin-console</url-pattern>
	</servlet-mapping>
	
	<!-- FF4J Services -->
	<servlet>
		<servlet-name>Web Services</servlet-name>
		<servlet-class>com.sun.jersey.spi.spring.container.servlet.SpringServlet</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Web Services</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>

	<!-- Welcome file -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>