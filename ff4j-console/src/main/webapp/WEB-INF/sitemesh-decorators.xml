<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<decorators defaultdir="/jsp-layout" >

    <excludes>
        <pattern>/img/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/font/*</pattern>
    </excludes> 
    
    <!-- Home -->
    <decorator name="default" page="layout-default.jsp">
        <pattern>/*</pattern>
        <pattern>/40*.jsp</pattern>
    </decorator>
    
    <!-- Dedicated to login -->
     <decorator name="login" page="layout-login.jsp">
        <pattern>/login</pattern>
     </decorator>
    
</decorators>
