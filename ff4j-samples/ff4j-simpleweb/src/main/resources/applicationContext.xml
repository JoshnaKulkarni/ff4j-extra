<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <!-- LOAD FF4J AS SPRING BEAN FOR -->
	<bean id="ff4j" class="org.ff4j.FF4j" >
		<property name="store">
			<bean id="ff4j.store" class="org.ff4j.store.InMemoryFeatureStore" >
				<property name="location" value="ff4j.xml" />
			</bean>
		</property>
	</bean>
	
	<!-- Make the Ff4j bean available for TagLibs -->
	<bean class="org.ff4j.web.FF4jWebContextHolder">
		<property name="ff4j" ref="ff4j" />
	</bean>
	
</beans>